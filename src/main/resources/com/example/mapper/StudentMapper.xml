<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.mapper.StudentMapper">
    
    <sql id="commonSelect">
        select stu_id, name, major, college, university, class, grand
        from student
    </sql>
    
    <update id="update">
        update student
        <set>
            <if test="name != null and name != ''">
                name=#{name},
            </if>
            <if test="major != null and major != ''">
                major=#{major},
            </if>
            <if test="college != null and college != ''">
                college=#{college},
            </if>
            <if test="className != null">
                class=#{className},
            </if>
            <if test="grand != null">
                grand=#{grand},
            </if>
        </set>
        where stu_id=#{stuId} and university=#{university}
    </update>
    <select id="pageList" resultType="com.example.pojo.Student">
        <include refid="commonSelect" />
        <where>
            <if test="name !=null and name != ''">
                name like concat('%',#{name},'%')
            </if>
            <if test="major != null and major != ''">
                and major=#{major}
            </if>
            <if test="college != null and college != ''">
                and college=#{college}
            </if>
            <if test="className != null">
                and class=#{className}
            </if>
            <if test="grand != null">
                and grand=#{grand}
            </if>
            <if test="university != null and university != ''">
                and university=#{university}
            </if>
        </where>
        order by stu_id desc
    </select>
</mapper>